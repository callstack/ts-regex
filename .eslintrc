{
  "extends": "@callstack/eslint-config/node",
  "plugins": ["import"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "quoteProps": "consistent",
        "singleQuote": true,
        "tabWidth": 2,
        "trailingComma": "all",
        "useTabs": false
      }
    ],
    "sort-imports": [
      "error",
      {
        "ignoreCase": true,
        "ignoreDeclarationSort": true
      }
    ],
    "import/order": "error"
  },
  "parserOptions": {
    "project": ["./tsconfig.json"]
  }
}
