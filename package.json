{
  "name": "ts-regex-builder",
  "version": "1.6.0",
  "description": "Maintainable regular expressions for TypeScript and JavaScript.",
  "source": "src/index.ts",
  "sideEffects": false,
  "files": [
    "src",
    "dist",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "!**/.*"
  ],
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    },
    "./patterns": {
      "require": "./dist/patterns/index.js",
      "import": "./dist/patterns/index.js",
      "types": "./dist/patterns/index.d.ts"
    }
  },
  "scripts": {
    "test": "jest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "clean": "del-cli dist",
    "build": "tsup",
    "prepare": "build",
    "release": "release-it",
    "release:beta": "release-it --preRelease=beta"
  },
  "keywords": [
    "regex",
    "typescript"
  ],
  "repository": "https://github.com/callstack/ts-regex-builder",
  "author": "Maciej JastrzÄ™bski <mdjastrzebski@gmail.com> (https://github.com/mdjastrzebski)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/callstack/ts-regex-builder/issues"
  },
  "homepage": "https://github.com/callstack/ts-regex-builder#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.24.5",
    "@babel/preset-typescript": "^7.24.1",
    "@callstack/eslint-config": "^14.1.0",
    "@commitlint/config-conventional": "^17.0.2",
    "@evilmartians/lefthook": "^1.5.0",
    "@release-it/conventional-changelog": "^5.0.0",
    "@types/jest": "^28.1.2",
    "commitlint": "^17.0.2",
    "del-cli": "^5.0.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-flowtype": "^8.0.3",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^28.1.1",
    "prettier": "^2.0.5",
    "release-it": "^15.0.0",
    "tsup": "^8.0.2",
    "typescript": "^5.0.2"
  },
  "packageManager": "yarn@3.6.1",
  "engines": {
    "node": ">= 18.0.0"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "<rootDir>/jest-setup.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/dist/"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    },
    "hooks": {
      "before:init": [
        "yarn lint",
        "yarn typecheck",
        "yarn test"
      ],
      "after:bump": [
        "yarn clean",
        "yarn build"
      ],
      "after:release": "echo Successfully released ${name} v${version} to ${repo.repository}."
    }
  },
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all",
    "useTabs": false
  }
}
